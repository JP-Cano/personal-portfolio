---
import logoDark from "@/assets/logos/logo-dark-mode.webp";
import logoLight from "@/assets/logos/logo-white-mode.webp";
import cvFile from "@/assets/Juan-Pablo-Cano-resume.pdf";
import Download from "@/icons/Download.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
---

<nav class="navbar">
  <div class="nav-container">
    <a href="#hero" class="nav-logo">
      <img src={logoLight.src} alt="Logo" class="logo logo-light" />
      <img src={logoDark.src} alt="Logo" class="logo logo-dark" />
    </a>
    <ul class="nav-links">
      <li><a href="#about">About</a></li>
      <li><a href="#experience">Experience</a></li>
      <li><a href="#projects">Projects</a></li>
      <li><a href="#skills">Skills</a></li>
      <li><a href="#contact" class="contact-btn">Contact</a></li>
    </ul>
    <div class="actions">
      <ThemeToggle />
      <a
        href={cvFile}
        download="Juan_Pablo_Cano_CV.pdf"
        class="cv-download-btn"
        title="Download CV"
        aria-label="Download CV"
      >
        <Download />
        <span class="cv-btn-text">CV</span>
      </a>
      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</nav>

<script>
  const navbar = document.querySelector(".navbar");
  let lastScroll = 0;

  window.addEventListener("scroll", () => {
    const currentScroll = window.scrollY;

    if (currentScroll > 100) {
      navbar?.classList.add("scrolled");
    } else {
      navbar?.classList.remove("scrolled");
    }

    lastScroll = currentScroll;
  });

  const menuToggle = document.querySelector(".mobile-menu-toggle");
  const navLinks = document.querySelector(".nav-links");

  menuToggle?.addEventListener("click", () => {
    navLinks?.classList.toggle("active");
    menuToggle?.classList.toggle("active");
  });

  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      const href = (this as HTMLAnchorElement).getAttribute("href");
      // Only handle internal anchor links (starting with # followed by an ID)
      // Skip if href has been dynamically changed to an external URL
      if (!href || !href.startsWith("#") || href === "#") {
        return;
      }
      e.preventDefault();
      try {
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
          navLinks?.classList.remove("active");
          menuToggle?.classList.remove("active");
        }
      } catch {
        // Invalid selector (e.g., URL), let the default behavior happen
      }
    });
  });
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 1.5rem 2rem;
    transition: all 0.3s ease;
  }

  .navbar.scrolled {
    background: var(--nav-surface);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
    padding: 1rem 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    height: 40px;
    transition: transform 0.3s ease;
  }

  .nav-logo:hover {
    transform: scale(1.05);
  }

  .nav-logo .logo {
    height: 50px;
    width: auto;
    object-fit: contain;
  }

  .nav-logo .logo-light {
    display: block;
  }

  .nav-logo .logo-dark {
    display: none;
  }

  :global(:root[data-theme="dark"]) .nav-logo .logo-light {
    display: none;
  }

  :global(:root[data-theme="dark"]) .nav-logo .logo-dark {
    display: block;
  }

  .nav-links {
    display: flex;
    gap: 2.5rem;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .cv-download-btn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-secondary) 100%
    );
    color: white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.85rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);
  }

  .cv-download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
  }

  .cv-download-btn:active {
    transform: translateY(0);
  }

  .cv-btn-text {
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .nav-links a {
    color: var(--color-text-light);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-links a::after {
    content: "";
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width 0.3s ease;
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .contact-btn {
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-secondary) 100%
    );
    color: white !important;
    padding: 0.6rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
  }

  .contact-btn::after {
    display: none;
  }

  .contact-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(99, 102, 241, 0.4);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: var(--color-text);
    border-radius: 3px;
    transition: all 0.3s ease;
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translateY(8px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translateY(-8px);
  }

  @media (width <= 768px) {
    .mobile-menu-toggle {
      display: flex;
    }

    .nav-logo {
      height: 32px;
    }

    .nav-logo .logo {
      height: 32px;
    }

    .nav-links {
      position: fixed;
      top: 70px;
      right: -100%;
      flex-direction: column;
      background: var(--nav-surface);
      backdrop-filter: blur(10px);
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 5px 30px rgba(0, 0, 0, 0.2);
      transition: right 0.3s ease;
      gap: 1.5rem;
    }

    .nav-links.active {
      right: 2rem;
    }

    .cv-download-btn {
      padding: 0.4rem 0.75rem;
      font-size: 0.8rem;
    }

    .cv-download-btn svg {
      width: 16px;
      height: 16px;
    }
  }
</style>
