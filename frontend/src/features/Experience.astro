---
export const prerender = false;

import { api } from "@/api/api-client.ts";
import ApiError from "@/components/ApiError.astro";
import Section from "@/components/Section.astro";
import type { Experiences } from "@/types/types.ts";
import { API_PATHS } from "@/utils/constants.ts";
import { asyncThrowable } from "@/utils/utils.ts";

const [experiences, error] = await asyncThrowable<Experiences>(() =>
  api.get<Experiences>(API_PATHS.EXPERIENCES)
);

const hasError = error !== null;
---

<Section title="Experience" id="experience">
  <ApiError hasError={hasError} error={error} data={experiences} />

  {
    !hasError && experiences && experiences.length > 0 && (
      <div class="timeline">
        {experiences.map((experience, index) => {
          const displayData = {
            company: experience.company,
            url: experience.url || "#",
            title: experience.title,
            location: experience.location,
            type: experience.type,
            startDate: experience.startDate,
            endDate: experience.endDate,
            description: experience.description,
          };

          const startYear = new Date(displayData.startDate).getFullYear();
          const endYear = displayData.endDate
            ? new Date(displayData.endDate).getFullYear()
            : "Present";

          return (
            <div
              class="timeline-item"
              style={`animation-delay: ${index * 0.15}s`}
            >
              <div class="timeline-marker">
                <div class="timeline-dot" />
                <div class="timeline-line" />
              </div>
              <div class="timeline-content">
                <div class="experience-card">
                  <div class="card-header">
                    <div class="title-section">
                      <h3 class="company-name">
                        <a
                          href={displayData.url}
                          title={`View ${displayData.company}`}
                          target="_blank"
                          rel="noopener"
                        >
                          {displayData.company}
                        </a>
                      </h3>
                      <h4 class="position-title">{displayData.title}</h4>
                      {displayData.location && displayData.type && (
                        <p class="work-details">
                          {displayData.location} • {displayData.type}
                        </p>
                      )}
                    </div>
                    <div class="date-badge">
                      <time datetime={displayData.startDate.toString()}>
                        {startYear}
                      </time>
                      <span>-</span>
                      <time datetime={displayData.endDate?.toString() || ""}>
                        {endYear}
                      </time>
                    </div>
                  </div>
                  <div class="card-body">
                    <p class="experience-summary">{displayData.description}</p>
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    )
  }
</Section>

<style>
  .timeline {
    position: relative;
    max-width: 1000px;
    margin: 0 auto;
  }

  .timeline-item {
    display: grid;
    grid-template-columns: 50px 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
    animation: fadeInLeft 0.6s ease backwards;
  }

  .timeline-item:last-child .timeline-line {
    display: none;
  }

  .timeline-marker {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 0.5rem;
  }

  .timeline-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-secondary) 100%
    );
    border: 4px solid white;
    box-shadow: 0 0 0 2px var(--color-primary);
    z-index: 1;
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-dot {
    transform: scale(1.2);
    box-shadow:
      0 0 0 4px var(--color-primary),
      0 0 20px rgba(99, 102, 241, 0.5);
  }

  .timeline-line {
    width: 2px;
    flex: 1;
    background: linear-gradient(
      180deg,
      var(--color-primary) 0%,
      transparent 100%
    );
    margin-top: 0.5rem;
  }

  .timeline-content {
    padding-bottom: 1rem;
  }

  .experience-card {
    background: var(--color-surface);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 2px solid var(--color-border);
    transition: all 0.3s ease;
    min-width: 0;
    overflow: hidden;
  }

  .experience-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(99, 102, 241, 0.15);
    border-color: var(--color-primary);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .title-section {
    flex: 1;
    min-width: 0;
  }

  .company-name {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--color-text);
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .company-name a {
    color: var(--color-text);
    position: relative;
    transition: color 0.3s ease;
    word-break: break-word;
  }

  .company-name a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-secondary) 100%
    );
    transition: width 0.3s ease;
  }

  .company-name a:hover {
    color: var(--color-primary);
  }

  .company-name a:hover::after {
    width: 100%;
  }

  .position-title {
    font-size: 1.1rem;
    color: var(--color-text-light);
    font-weight: 600;
    margin: 0;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .work-details {
    font-size: 0.95rem;
    color: var(--color-text-light);
    margin: 0.5rem 0 0 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    word-break: break-word;
  }

  .date-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    background: var(--color-bg-alt);
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text);
    white-space: nowrap;
  }

  .card-body {
    color: var(--color-text);
  }

  .experience-summary {
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 1rem;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .highlights-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0 0;
  }

  .highlights-list li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .highlights-list li::before {
    content: "▹";
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-size: 1.2rem;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media (width <= 768px) {
    .timeline-item {
      grid-template-columns: 30px 1fr;
      gap: 1rem;
    }

    .timeline-dot {
      width: 16px;
      height: 16px;
    }

    .experience-card {
      padding: 1.5rem;
    }

    .card-header {
      flex-direction: column;
      gap: 1rem;
    }

    .date-badge {
      align-self: flex-start;
    }

    .company-name {
      font-size: 1.25rem;
    }

    .position-title {
      font-size: 1rem;
    }
  }
</style>
