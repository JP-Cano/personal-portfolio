---
import { api } from "@/api/api-client.ts";
import ApiError from "@/components/ApiError.astro";
import Section from "@/components/Section.astro";
import type { CareerCertifications } from "@/types/types.ts";
import { API_PATHS } from "@/utils/constants.ts";
import { asyncThrowable } from "@/utils/utils.ts";

export const prerender = false;

const [certifications, error] = await asyncThrowable<CareerCertifications>(() =>
  api.get<CareerCertifications>(API_PATHS.UPLOAD_CERTIFICATES)
);

const hasError = error !== null;
---

<Section title="Certifications" id="certifications">
  <ApiError hasError={hasError} error={error} data={certifications} />
  {
    !hasError && certifications && certifications.length > 0 && (
      <div class="certifications-grid">
        {certifications.map((cert) => {
          const issueDate = new Date(cert.issue_date);
          const formattedDate = issueDate.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
          });

          return (
            <a
              href={cert.file_url}
              class="glightbox cert-card-link"
              data-title={cert.title}
              data-description={`${cert.issuer} - ${formattedDate}`}
            >
              <article class="cert-card">
                <div class="cert-image-container">
                  <img
                    src={cert.file_url}
                    alt={cert.title}
                    class="cert-image"
                    loading="lazy"
                  />
                  <div class="cert-overlay">
                    <div class="view-cert-btn">
                      <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                      >
                        <path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7" />
                      </svg>
                      View Certificate
                    </div>
                  </div>
                </div>
                <div class="cert-content">
                  <h3 class="cert-title">{cert.title}</h3>
                  <div class="cert-meta">
                    <div class="cert-issuer">
                      <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                      >
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                        <circle cx="12" cy="7" r="4" />
                      </svg>
                      <span>{cert.issuer}</span>
                    </div>
                    <div class="cert-date">
                      <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                      >
                        <rect
                          x="3"
                          y="4"
                          width="18"
                          height="18"
                          rx="2"
                          ry="2"
                        />
                        <line x1="16" y1="2" x2="16" y2="6" />
                        <line x1="8" y1="2" x2="8" y2="6" />
                        <line x1="3" y1="10" x2="21" y2="10" />
                      </svg>
                      <span>{formattedDate}</span>
                    </div>
                  </div>
                </div>
              </article>
            </a>
          );
        })}
      </div>
    )
  }
</Section>

<script>
  import GLightbox from "glightbox";
  import "glightbox/dist/css/glightbox.min.css";
  GLightbox({
    selector: ".glightbox",
    touchNavigation: true,
    loop: true,
    autoplayVideos: false,
    zoomable: true,
    draggable: true,
    closeButton: true,
    closeOnOutsideClick: true,
  });
</script>

<style>
  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .certifications-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    padding: 0;
  }

  .cert-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .cert-card {
    display: flex;
    flex-direction: column;
    background: var(--color-surface);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 2px solid var(--color-border);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    height: 100%;
  }

  .cert-card-link:hover .cert-card {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(99, 102, 241, 0.2);
    border-color: var(--color-primary);
  }

  .cert-image-container {
    position: relative;
    width: 100%;
    padding-top: 70.7%;
    background: var(--color-bg-alt);
    overflow: hidden;
  }

  .cert-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .cert-card-link:hover .cert-image {
    transform: scale(1.05);
  }

  .cert-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .cert-card-link:hover .cert-overlay {
    opacity: 1;
  }

  .view-cert-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-surface);
    color: var(--color-text);
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    transform: translateY(10px);
    pointer-events: none;
  }

  .cert-card-link:hover .view-cert-btn {
    transform: translateY(0);
  }

  .view-cert-btn:hover {
    background: var(--color-primary);
    color: white;
  }

  .cert-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .cert-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .cert-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .cert-issuer,
  .cert-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  .cert-issuer svg,
  .cert-date svg {
    flex-shrink: 0;
    color: var(--color-primary);
  }

  .cert-issuer span,
  .cert-date span {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .certifications-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .cert-content {
      padding: 1.25rem;
    }

    .cert-title {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .certifications-grid {
      gap: 1rem;
    }

    .cert-card {
      border-radius: 12px;
    }

    .cert-content {
      padding: 1rem;
    }
  }

  @media print {
    .cert-card {
      break-inside: avoid;
    }

    .cert-overlay,
    .view-cert-btn {
      display: none;
    }
  }
</style>
